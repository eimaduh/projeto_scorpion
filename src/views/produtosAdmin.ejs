<%- include('./partials/head')%>
<link rel="stylesheet" href="/css/adminProducts.css">
<body>

    
      <%- include('partials/header-navbar') %>
    

    <i></i><a class="home" href="/">HOME</a>

    <h1>Cadastro de Produtos</h1>

        
     <article class="container-products_admin">
            <form class="form-edit" action="#" method="post">
              
                <label for="name">Nome do produto</label>
                <input type="text" name="name" size="100" placeholder="Nome do produto" required>
           
                <label for="description">Descrição</label>
                <textarea name="description" id="description" placeholder="Descrição do produto" maxlength="250"></textarea>
                
                <label for="especification">Especificação</label>
                <textarea name="especification" id="especification" placeholder="Especificação do produto" maxlength="250" required></textarea>
              <div classs="price-stock">
                <label for="price">Preço</label>
                <input id="price" type="number" name="price" placeholder="ex. 7,00" required>

                <label for="stock">Estoque</label>
                <input id="price" type="number" name="stock" placeholder="digite a quantidade" required>
              </div>
              <div class="brand-category">
              
                <label for="brand">Marca</label>
                <select id="brand" required>
                  <option selected disabled value="">Selecione</option>
                </select>
              
              
                <label for="category">Categoria</label>
                <select id="category" required>
                  <option selected disabled value="">Selecione</option>
                </select>
              
              </div>
                <div class="register-admin">
                    <button class="submit-admin" type="submit">Cadastrar produto</button>
                </div>

            </form>
    </article>

      <%- include('partials/footer') %>
   


</body>
</html>


