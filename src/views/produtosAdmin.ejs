<%- include('./partials/head')%>
<link rel="stylesheet" href="/css/adminProducts.css">
<body>

    
      <%- include('partials/header-navbar') %>
    

    <i></i><a class="home" href="/">HOME</a>

    <h1>Cadastro de Produtos</h1>

        
     <article class="container-products_admin">
            <form class="form-edit" action="#" method="post">

                <label for="name">Nome</label>
                <input type="text" name="name" size="100" placeholder="Nome do produto" required>
                
                <label for="name">Descrição</label>
                <input id="input-text" type="text" name="description" placeholder="Descrição do produto" required>
                
                <label for="name">Especificação</label>
                <input id="input-text" type="text" name="especification" placeholder="Especificação do produto do produto" required>

                <label for="price">Preço</label>
                <input type="number" name="price" placeholder="exemplo 7,00" required>

                <label for="stock">Estoque</label>
                <input type="number" name="stock" placeholder="digite a quantidade" required>

                <label for="brand">Marca</label>
                <input type="text" name="brand" placeholder="digite a marca do produto" required>

                <label for="category">Categoria</label>
                <input type="text" name="category" placeholder="digite a categoria" required>

                <div class="center">
                    <button class="submit-product" type="submit">Cadastrar</button>
                </div>

            </form>
    </article>

      <%- include('partials/footer') %>
   


</body>
</html>


