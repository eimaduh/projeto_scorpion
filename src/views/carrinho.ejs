<%- include('./partials/head')%>
    <link rel="stylesheet" href="/css/carrinho.css">
<body>
    <%- include('./partials/head')%>
   <nav>
       <a class="link-img" href="/"><img src="/img/arrow-white.png" alt="seta"></a>
       <h1>Meu carrinho</h1>
       <h3 id="itens">Itens( )</h3>
    </nav>
    
<div class="container">

        <div class="left"> 
           <section class="CEP">
                <form>
                    <label for="CEP">CEP:</label>
                    <input type="text" name="cep" id="cep-serach">
                    <button class="ok" type="submit" id="cep-ok" >OK</button>
                </form>
                <br>
                <p id="frete-value">Valor do frete R$</p>
            </section>

            
            <div class="descricao-produto">
                        <div class="img-produto">
                            <img src="/img/mangueira.jpeg" alt="imagem">
                        </div>
                            
                        <div class="nome-preco-produto">
                            <p>Nome do produto</p><br>
                            <p>Valor do produto</p>
                        </div>
                        
                <div class="test">

                    <div> <p>Quantidade:</p> </div>

                    <div class="infosProduto" id="infosProduto">
                        <button type="button" class="btn-secondary" id="decrement"> - </button>
                        <input id="display" type="text" name="display" value="0"></input>
                        <button type="button" class="btn-primary" id="increment"> + </button> 
                    </div>

                    <div class="flex-end">
                        <img class="lixeira" src="/img/trash-icon.png" alt="lixo">
                    </div>

                </div>
                    
            </div>
        </div>

                        
                    
                    
     <div class="right">
            <section class="resumo">
                
                <div class="img-resumo">
                    <img src="/img/resume-icon.png" alt="resumo">
                    <h2>RESUMO</h2>
                </div>

                <div class="resumo-info">
                    <p>Valor dos produtos: R$00,00</p>
                    <p>Frete: R$00,00</p>
                    <p>Total a prazo: R$00,00</p>
                    <p>(Em at√© 12x de R$ 00,00 sem juros)</p>
                </div>
                <br><br>

            <button class="botao-pagamento" href="/finalizacao" >Ir para o pagamento</button>
               <br><br>
            <button class="continuar-compra" href="/categoria" >Continuar Comprando</button>
            
                
        </section>
        
     </div>


</div>
            <footer>
                SCORPION TABACARIA
            </footer>

            <script type="text/javascript" src="/scripts/carrinho.js"></script>
    
</body>
</html>
    
    
    
    
    
    
    

    
        

