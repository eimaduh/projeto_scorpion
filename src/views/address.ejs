                            <input type="radio" name="select" id="select">
                            <label for="selected">Selecionar endereço</label>
                            </div>
                        </div>
                        <div class="address-one">
                            <div class="address-btn">
                            <input type="radio" name="select" id="select">
                            <label for="selected">Selecionar endereço</label>
