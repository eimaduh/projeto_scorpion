<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/data.css">
    <script src="https://kit.fontawesome.com/abd81b9a83.js" crossorigin="anonymous"></script>
    <title>ScorpionTabacaria</title>
</head>

<body>
    <%- include('partials/header') %>
    <main>
        <section class="background">
            <section class="account">
                <div class="purchases">
                    <h2>MINHA CONTA</h2>
                </div>
                </section>
            <section class="user-account">
            <div class="userData">
                <div class="hello">
                    <h5>Olá,
                        <!-- código para identificar user -->
                    </h5>
                    <p>Bem vindo(a) a sua área</p>
                </div>
                <div class="line"></div>
                <article class="user-panel">
                    <div>
                        <div class="panel-data">
                            <div class="data">
                                <img src="/img/users.png">
                            </div>
                            <div class="my-data">
                                <a href="/users/data">Meus dados</a>
                                <h6>Dados cadastrais</h6>
                            </div>

                        </div>
                    </div>

                    <div>
                        <div class="panel-data">
                            <div class="data">
                                <img src="/img/address.png">
                            </div>
                            <div class="my-data">
                                <a href="#">Endereços</a>
                                <h6>Endereços cadastrados</h6>
                            </div>

                        </div>
                    </div>
                    <div>
                        <div class="panel-data">
                            <div class="data">
                                <img src="/img/box.png">
                            </div>
                            <div class="my-data">
                                <a href="#">Pedidos</a>
                                <h6>Histórico de pedidos</h6>
                            </div>

                        </div>
                    </div>
                    <div>
                        <div class="panel-data">
                            <div class="data">
                                <img src="/img/wallet.png">
                            </div>
                            <div class="my-data">
                                <a href="#">Créditos</a>
                               
                                <h6>Meu saldo</h6>
                                
                            </div>

                        </div>
                    </div>
                </article>
                
            </div>
            <article class="user-credits-container">
                
                <div class="user-credits-box">
                    <div class="user-credits-box-inner">
                        <a href="/users">
                            <i class="fa-solid fa-circle-arrow-left"></i>
                            Voltar
                        </a>
                        <h2>Meus dados</h2>
                        <div class="line"></div>
                        </div>
                    </div>
                    <fieldset>
                        <legend>Dados pessoais</legend>
                    
                    
                    <form class="form-user" action="/user" method="POST">
                        <div> 
                         
                          <label for="name">Nome completo</label>
                          <input class="input-user" type="text" id="name" name="name" />
                        </div>
                        <div>
                            <label for="number">Nascimento</label>
                            <input class="input-user" type="number" id="number" name="number" />
                          </div>
                        <div>
                          <label for="number">CPF</label>
                          <input class="input-user" type="number" id="number" name="number" />
                        </div>
                
                        <div>
                          <label for="email">Email</label>
                          <input class="input-user" type="email" id="email" name="email" />
                        </div>
                        <div>
                            <label for="tel">Celular</label>
                            <input class="input-user" type="tel" id="tel" name="tel" />
                          </div>
                          <div>
                            <label for="tel">Telefone residencial</label>
                            <input class="input-user" type="tel" id="tel" name="tel" />
                          </div>
                          <button class="btn-edit" type="submit">Editar dados</button>
                      </form>
                    </fieldset>
                    
                </article>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>

</html>